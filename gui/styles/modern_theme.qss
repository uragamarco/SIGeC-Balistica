    border-radius: 3px;
}

.dl-slider::handle:horizontal {
    background: #007bff;
    border: 1px solid #0056b3;
    width: 18px;
    height: 18px;
    border-radius: 9px;
    margin: -7px 0;
}

.dl-feature {
    color: #495057;
    font-weight: 500;
    padding: 4px 0;
}

.dl-feature:checked {
    color: #007bff;
}

.dl-spin {
    border: 1px solid #ced4da;
    border-radius: 4px;
    padding: 6px 8px;
    background-color: #ffffff;
}

.dl-option {
    color: #495057;
    font-weight: 500;
    padding: 5px 0;
}

.dl-ensemble-list {
    border: 1px solid #ced4da;
    border-radius: 4px;
    background-color: #ffffff;
    alternate-background-color: #f8f9fa;
}

.dl-augmentation {
    color: #495057;
    font-weight: 500;
    padding: 3px 0;
}

