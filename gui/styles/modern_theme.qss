/*
Modern Theme for SIGeC-Balisticar
Professional, clean, and consistent styling system
*/

/* ===== GLOBAL STYLES ===== */
* {
    font-family: "Segoe UI", "Roboto", "Helvetica Neue", Arial, sans-serif;
    font-size: 9pt;
    color: #2c3e50;
}

QMainWindow {
    background-color: #f8f9fa;
    color: #2c3e50;
}

/* ===== STEPPER WIDGET STYLES ===== */
.stepper-container {
    background-color: #ffffff;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    padding: 20px;
    margin: 10px 0;
}

.stepper-step {
    background-color: #f8f9fa;
    border: 2px solid #dee2e6;
    border-radius: 50%;
    color: #6c757d;
    font-weight: bold;
    font-size: 12pt;
    min-width: 40px;
    max-width: 40px;
    min-height: 40px;
    max-height: 40px;
}

.stepper-step[status="active"] {
    background-color: #007bff;
    border-color: #007bff;
    color: white;
}

.stepper-step[status="completed"] {
    background-color: #28a745;
    border-color: #28a745;
    color: white;
}

.stepper-step[status="disabled"] {
    background-color: #f8f9fa;
    border-color: #dee2e6;
    color: #adb5bd;
}

.stepper-line {
    background-color: #dee2e6;
    height: 2px;
    margin: 0 10px;
}

.stepper-line[status="completed"] {
    background-color: #28a745;
}

.stepper-label {
    color: #6c757d;
    font-size: 10pt;
    font-weight: 500;
    margin-top: 8px;
}

.stepper-label[status="active"] {
    color: #007bff;
    font-weight: 600;
}

.stepper-label[status="completed"] {
    color: #28a745;
    font-weight: 600;
}

.stepper-navigation {
    background-color: #f8f9fa;
    border-top: 1px solid #dee2e6;
    padding: 15px 20px;
    margin-top: 20px;
}

/* ===== NIST CONFIGURATION STYLES ===== */
.nist-enable-checkbox {
    font-size: 11pt;
    font-weight: 600;
    color: #495057;
    padding: 10px;
}

.nist-config-panel {
    background-color: #ffffff;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    margin-top: 10px;
}

.nist-section {
    border: 1px solid #e9ecef;
    border-radius: 6px;
    margin: 5px 0;
    font-weight: 600;
    color: #495057;
}

.nist-section::title {
    color: #343a40;
    font-weight: 600;
    padding: 5px 10px;
}

.nist-input {
    border: 1px solid #ced4da;
    border-radius: 4px;
    padding: 8px 12px;
    background-color: #ffffff;
    selection-background-color: #007bff;
}

.nist-input:focus {
    border-color: #007bff;
    /* Qt QSS no soporta 'outline' ni 'box-shadow'. Removidos. */
}

.nist-combo {
    border: 1px solid #ced4da;
    border-radius: 4px;
    padding: 8px 12px;
    background-color: #ffffff;
    selection-background-color: #007bff;
}

.nist-combo:focus {
    border-color: #007bff;
}

.nist-combo::drop-down {
    border: none;
    width: 20px;
}

