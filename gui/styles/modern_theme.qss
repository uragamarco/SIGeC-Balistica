}

.nist-option {
    color: #495057;
    font-weight: 500;
    padding: 5px 0;
}

.nist-option:checked {
    color: #007bff;
}

.nist-description {
    color: #6c757d;
    font-size: 8pt;
    font-style: italic;
    margin-top: 5px;
}

/* ===== AFTE CONFIGURATION STYLES ===== */
.afte-enable-checkbox {
    font-size: 11pt;
    font-weight: 600;
    color: #495057;
    padding: 10px;
}

.afte-config-panel {
    background-color: #ffffff;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    margin-top: 10px;
}

.afte-section {
    border: 1px solid #e9ecef;
    border-radius: 6px;
    margin: 5px 0;
    font-weight: 600;
    color: #495057;
}

.afte-combo {
    border: 1px solid #ced4da;
    border-radius: 4px;
    padding: 8px 12px;
    background-color: #ffffff;
}

.afte-slider {
    height: 20px;
}

.afte-slider::groove:horizontal {
    border: 1px solid #ced4da;
    height: 6px;
    background: #f8f9fa;
    border-radius: 3px;
}

.afte-slider::handle:horizontal {
    background: #007bff;
    border: 1px solid #0056b3;
    width: 18px;
    height: 18px;
    border-radius: 9px;
    margin: -7px 0;
}

.afte-slider::handle:horizontal:hover {
    background: #0056b3;
}

.afte-value-label {
    color: #495057;
    font-weight: 600;
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    padding: 4px 8px;
    text-align: center;
}

.afte-radio {
    font-weight: 500;
    padding: 8px 0;
}

.afte-radio.identification {
    color: #28a745;
}

.afte-radio.inconclusive {
    color: #ffc107;
}

.afte-radio.elimination {
    color: #dc3545;
}

.afte-radio.auto {
    color: #007bff;
}

.afte-radio-description {
    color: #6c757d;
    font-size: 8pt;
    margin-left: 25px;
    margin-bottom: 8px;
}

.afte-option {
    color: #495057;
    font-weight: 500;
    padding: 5px 0;
}

.afte-spin {
    border: 1px solid #ced4da;
    border-radius: 4px;
    padding: 6px 8px;
    background-color: #ffffff;
}

.afte-notes {
    border: 1px solid #ced4da;
    border-radius: 4px;
    padding: 8px;
    background-color: #ffffff;
    font-family: "Consolas", "Monaco", monospace;
    font-size: 9pt;
}

